<div class="container-md background-div">
  <h1> Eat-Da-Burger</h1>

  {{#each burger}}
  <div class="row-col-3">
    <div class="col-7 preDiv">
      {{#unless devoured}}
      {{>burgers/partialBurger devoured=false}}
      {{/unless}}
    </div>
  </div>
  {{/each}}




  <div class="container-sm">


    {{#each burger}}
    <div class="row justify-content-end">
      <div class="col-7 postDiv">
        {{#if devoured}}
        {{>burgers/partialBurger devoured=true}}
        {{/if}}
      </div>
    </div>
    {{/each}}

  </div>


  <div class="row justify-content-center add-space">
    <form action="/api/burgers" method="POST" class="main-form">
      <textarea id="input1" rows="6" cols="40" name="submitField"></textarea>
  </div>
  <div class="row justify-content-center">
    <input type="submit" value="Submit" id="subButton">
  </div>
  </form>
  <p>Click the "Submit" button to add a new burger to the lineup</p>


</div>